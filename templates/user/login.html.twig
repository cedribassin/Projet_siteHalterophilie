{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block monTitre %}Connexion sur le site{% endblock %}
{% block body %}
{% if error %}
    <div class="alert alert-danger">
        <!--Permet de récupérer et afficher le message d'erreur en français-->
        {{ error.messageKey | trans(error.messagedata, 'security')}}
    </div>
{% endif %}
<form action="{{path('connexion')}}" method="POST" class="m-3">
    <div class="form-group">
        <label>Login : </label>
        <input type="text" required name="_username" class="form-control">
    </div>
    <div class="form-group">
        <label>Password : </label>
        <input type="password" required name="_password" class="form-control">
    </div>
    <input type="submit" class="my-2 btn btn-primary" value="s'identifier">
</form>
{% endblock %}