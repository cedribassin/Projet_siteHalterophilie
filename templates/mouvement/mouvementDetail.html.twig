{% extends 'base.html.twig' %}

{% block title %}Mouvements{% endblock %}
{% block monTitre %}Liste des mouvements ... {% endblock %}
{% block body %}
<div class="row mx-2">
  {% for mouvement in mouvements %}
  <div class="col-lg-4 col-md-3 col-sd-2 card border-info m-3" style="max-width: 20rem;">
      <div class="card-header">{{mouvement.nom|capitalize}}</div>
      <div class="card-body">
        <h4 class="card-title text-justify">info</h4>
        <p class="card-text">{{mouvement.objectif}}</p>
      </div>
  </div>
{% endfor %}
</div>
{% endblock %}
